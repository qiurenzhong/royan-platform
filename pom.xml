            </dependency>
            <dependency>
                <groupId>com.royan.framework</groupId>
                <artifactId>framework-redis</artifactId>
                <version>${fk.version}</version>
            </dependency>
            <dependency>
                <groupId>com.royan.framework</groupId>
                <artifactId>framework-auth</artifactId>
                <version>${fk.version}</version>
            </dependency>
            <dependency>
                <groupId>com.royan.framework</groupId>
                <artifactId>framework-search</artifactId>
                <version>${fk.version}</version>
            </dependency>

