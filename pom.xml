                <groupId>com.royan.framework</groupId>
                <artifactId>framework-core</artifactId>
                <version>${fk.version}</version>
            </dependency>
            <dependency>
                <groupId>com.royan.framework</groupId>
                <artifactId>framework-api</artifactId>
                <version>${fk.version}</version>
            </dependency>
            <dependency>
